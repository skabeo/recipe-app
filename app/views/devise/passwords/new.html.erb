<h2 class='center-text'>Forgot your password?</h2>

<div class='edit-form-container'>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'title-input' %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: 'in-out' %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
